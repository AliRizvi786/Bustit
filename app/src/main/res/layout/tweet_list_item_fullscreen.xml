<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="30dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Tweet Credibility"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#393838"
            android:textSize="30sp"
           />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/person_ic"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_twitter_seeklogo_com"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id = "@+id/twitter_username"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:text="Username"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:hint="Username"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:id = "@+id/twitter_handle"
                    android:layout_margin="10dp"
                    android:text="twitter_handle"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/tweet"
            android:layout_margin="10dp"
            android:background="@drawable/customborder"
            android:text = "This is a tweet"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/credibility_score"
            android:layout_margin="10dp"
            android:background="@drawable/customborder"
            android:text = "Tweet Credibility Score: "
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/link"
            android:textColor="#0000ff"
            android:layout_margin="10dp"
            android:background="@drawable/customborder"
            android:text = "@string/click_for_link"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="This Credibility score is generated buy our machine learning algorithms for each tweet. This score may change over time as user starts posting different content"
            android:textStyle="italic"
            />
    </LinearLayout>



</androidx.cardview.widget.CardView>